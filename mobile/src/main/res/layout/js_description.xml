<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/z" android:background="@color/light_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major: "
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:textSize="28dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/majorLabel"
        android:textSize="28dp"
        android:gravity="center"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position:"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_marginLeft="20dp"
        android:textSize="28dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/majorLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/positionLabel"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView7"
        android:textSize="28dp"
        android:gravity="center"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School:"
        android:id="@+id/textView12"
        android:layout_below="@+id/positionLabel"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/positionLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schoolLabel"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView12"
        android:layout_alignTop="@+id/textView12"
        android:textSize="28dp"
        android:gravity="center"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/textView3"
        android:layout_above="@+id/majorLabel"
        android:layout_alignStart="@+id/textView5"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/majorLabel"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:textSize="28dp"
        android:layout_toEndOf="@+id/textView3"
        android:gravity="center"
        android:layout_marginRight="20dp" />

</RelativeLayout>