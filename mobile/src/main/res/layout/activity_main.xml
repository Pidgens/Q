<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q"
        android:id="@+id/app_name"
        android:layout_marginTop="90dp"
        android:textSize="48dp"
        android:typeface="serif"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No more waiting."
        android:id="@+id/app_slogan"
        android:typeface="normal"
        android:textSize="32dp"
        android:gravity="center"
        android:layout_below="@+id/app_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recruiter"
        android:id="@+id/rec_button"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login As: "
        android:id="@+id/textView"
        android:textSize="32dp"
        android:layout_below="@+id/your_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Name: "
        android:textSize="24dp"
        android:id="@+id/textView2"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/your_name"
        android:layout_below="@+id/textView2"
        android:hint="Enter your name."
        android:textSize="24dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Seeker"
        android:id="@+id/js_button"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/app_name" />

</RelativeLayout>
